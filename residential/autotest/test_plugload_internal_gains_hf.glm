clock {
	timestamp '2000-01-01 0:00:00';
	stoptime '2000-01-02 1:00:00';
	timezone PST+8PDT;
}

module tape;
module residential;
module assert;


object house {
	floor_area 1500 sf;
	cooling_setpoint 100; // turns of HVAC
	heating_setpoint 1;
	object plugload {
