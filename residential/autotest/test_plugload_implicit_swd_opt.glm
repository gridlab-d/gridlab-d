//test_plugload_implicit_swd.glm

//This test file test the implicit use of plugloads within house_e.
//This test validates power, energy, and heat gain.

clock {
	timestamp '2000-05-06 0:00:00';
	stoptime '2000-05-07 1:00:00';
	timezone PST+8PDT;
}

module assert;
module tape;
module residential {
	implicit_enduses PLUGS;
}

object house {
	name House;
	heating_setpoint 5;
	cooling_setpoint 300;
	air_temperature 70;
	outdoor_temperature 73;
	object complex_assert {
		once ONCE_TRUE;
		target "panel.power";
		object player {
			property value;
			file "../test_plugload_enduse_load_swd.player";
		};
		within 1e-6;
	};
	object complex_assert {
		once ONCE_TRUE;
		target "panel.energy";
		object player {
			property value;
			file "../test_plugload_energy_swd.player";
		};
		within 1e-6;
	};
	object double_assert {
		once ONCE_TRUE;
		target "panel.heatgain";
		object player {
			property value;
			file "../test_plugload_heatgain_swd.player";
		};
		within 1e-6;
	};
	object recorder {
		property panel.power,panel.energy,panel.heatgain;
		file "test_plugload_implicit_swd.csv";
		interval 3600;
		limit 30;
	};
}