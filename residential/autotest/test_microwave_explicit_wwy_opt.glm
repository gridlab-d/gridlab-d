object house {
	heating_setpoint 5;
	cooling_setpoint 300;
	air_temperature 70;
	outdoor_temperature 73;
	object microwave {
		heatgain_fraction .8;
		power_factor .7;
		shape "type:pulsed; schedule: micro; energy: 1.0 kWh; power: 0.2 kW; count: 1; stdev: 40 W";
		object complex_assert {
			in '2001-01-05 1:00:00';
			once ONCE_TRUE;
			target "energy";
			value 1.0+1.020204j;
			within .01;//1 percet error
		};
		object recorder {
			property energy;
			file "test_microwave_explicit_wwy.csv";
			interval 3600;
			limit 24;
		};
	};
}