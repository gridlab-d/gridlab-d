#endif
#if ok!=${int1<>1?failed:ok}
#error Boolean <> test 2 failed!
#endif
#if ok!=${int1<>2?ok:failed}
#error Boolean <> test 3 failed!
#endif

#if ok!=${int1<0?failed:ok}
