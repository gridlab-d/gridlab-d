// test schedule transforms

module assert;

clock {
	timezone PST+8PDT;
	starttime '2009-01-01 0:00:00 PST';
	stoptime '2009-01-02 0:00:00 PST';
}
schedule test_schedule {
	* * * * * // value of 1 all the time
}
class mytest {
	double myvalue;
	intrinsic create(object parent)	{ 
		myvalue=0; // start with 0
		return 1; 
	};
}

object mytest {
	name MyTest;
	myvalue test_schedule;
	object double_assert {
		status ASSERT_TRUE;
		once ONCE_DONE;
		within 1e-8;
		value 1;
		target myvalue;
	};
}
