// test_market_controller_incompatible_units_exc.glm tests to see if there is a catch for incompatible units between the controller and the auction

#set tmp=../test_unitless_bid_quantity_err
#setenv GRIDLABD=../../../core

module market;
module residential {
	implicit_enduses NONE;
}

clock {
	timezone PST+8PDT;
	starttime '2001-01-01 00:00:00';
	stoptime '2001-01-03 00:00:00';
}

class auction {
	double current_price_mean_2h;
	double current_price_stdev_2h;
}

object auction {
	name Market;
	unit "MWh";

	period 3600;
	pricecap 9999;
	verbose TRUE;
	warmup 0;
	special_mode BUYERS_ONLY;
	init_price 10;
	init_stdev 0;
	fixed_price 12;
}

object house {
name house1;
	system_mode OFF;
	auxiliary_strategy DEADBAND;
	auxiliary_system_type ELECTRIC;
	heating_system_type HEAT_PUMP;
	cooling_system_type ELECTRIC;
	air_temperature 69;
	mass_temperature 69;
	thermostat_deadband 2;
	heating_setpoint 60;
	cooling_setpoint 70;
	number_of_stories 1;
	window_wall_ratio 0.07;
	heating_COP 1.00;
	cooling_COP 3.00;
	object controller {
		name buyer;
		simple_mode NONE;
		control_mode RAMP;
		bid_mode ON;
		setpoint cooling_setpoint;
		target air_temperature;
		market Market;
		average_target current_price_mean_2h;
		standard_deviation_target current_price_stdev_2h;
		ramp_high 5;
		ramp_low 2;
		range_low -2;
		range_high 5;
		period 300;
		base_setpoint 70;
		slider_setting 1;
		demand cooling_demand;
		total total_load;
		load hvac_load;
		state power_state;
	};
}