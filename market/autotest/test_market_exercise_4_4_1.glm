// Exercise 4.4.1

#set tmp=../test_market_exercise_4_4_1
#setenv GRIDLABD=../../../core


module tape;
module market;

clock {
	timezone PST+8PDT;
	starttime '2001-01-01 00:00:00';
	stoptime '2001-01-08 00:00:00';
}

schedule buyer_price {
	* * * * * 10;
}

schedule seller_1_price {
	* 0-17 * * * 5;
	* 18-21 * * * 10;
	* 22-23 * * * 60;
}

schedule seller_2_price {
	* 0-5 * * * 20;
	* 6-8 * * * 40;
	* 9-17 * * * 20;
	* 18-21 * * * 30;
	* 22-23 * * * 80;
}

schedule seller_3_price {
	* 0-5 * * * 40;
	* 6-8 * * * 60;
	* 9-17 * * * 40;
	* 18-21 * * * 50;
	* 22-23 * * * 100;
}

schedule buyer_quantity {
	* 0-5 * * * 1;
	* 6-8 * * * 5;
	* 9-17 * * * 2;
	* 18-21 * * * 10;
	* 22-23 * * * 3;
}

schedule seller_quantity {
	* 0-5 * * * 1.5;
	* 6-8 * * * 7.5;
	* 9-17 * * * 2;
	* 18-21 * * * 15;
	* 22-23 * * * 3;
}

object auction {
	name Market_1;

	unit MWh;
	period 1800;
	verbose TRUE;
	special_mode NONE;
	object recorder {
		property current_market.clearing_price,current_market.clearing_quantity,current_market.start_time,current_market.end_time;
		file "exercise_4_4_1.csv";
		interval 3600;
		limit 168;
	};
}

object stub_bidder {
