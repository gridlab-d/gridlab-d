//This file tests the operation of a heating controller 
//in double ramp mode with deadband resolution 
//in a responsive market and a matching period
//Since the averages and standard deviations in the controller
//are not published properties, the only way to check if these
//values are correct is to check whether the calculated bidding
//prices are correct (this calculation uses these values)

#set tmp=../test_markets_controller_heating_deadband_matching_period
#setenv GRIDLABD=../../../core

#define stylesheet=http://gridlab-d.svn.sourceforge.net/viewvc/gridlab-d/trunk/core/gridlabd-2_0

module market;
module tape;
module assert;
module powerflow;
module residential {
	implicit_enduses NONE;
	default_outdoor_temperature 25;
}

clock {
	timezone PST+8PDT;
	starttime '2001-06-25 14:00:00';
	stoptime '2001-06-25 16:00:00';
}

schedule seller_prices {
	0-14 14 * * * 100;
	15-29 14 * * * 10;
	30-44 14 * * * 25;
	45-59 14 * * * 112;
	0-14 15 * * * 49.5;
	15-29 15 * * * 49.8;
	30-44 15 * * * 50.2;
	45-59 15 * * * 77;
	* 16 * * * 82;
}

schedule controller_bids {
	0-14 14 * * * 100;
	15-29 14 * * * 52.6205;
	30-44 14 * * * 13.79913;
	45-59 14 * * * 103.7402;
	0-14 15 * * * 110.4213;
	15-29 15 * * * 0;
	30-44 15 * * * 50.20144;
	45-59 15 * * * 69.00181;
	* 16 * * * 81.0818;
}

schedule heating_setpoints {
	0-14 14 * * * 65;
	15-29 14 * * * 66.5;
	30-44 14 * * * 63;
	45-59 14 * * * 63;
	0-14 15 * * * 66.5;
	15-29 15 * * * 63;
	30-44 15 * * * 63;
	45-59 15 * * * 63;
	* 16 * * * 63;
}

class auction {
	double current_price_mean_30min;
	double current_price_stdev_30min;
}

