object triplex_meter {
	phases AS;
	nominal_voltage 120;
	object house {
		name house1;
		cooling_setpoint 70;
		heating_setpoint 65;
		air_temperature 65;
		// object multi_recorder {
			// property outdoor_temperature;
			// file "weather_data.csv";
