//This file tests that the clearing prices are valid when
//multiple buyers and sellers bid negative prices 

//Bidding period: 3600 s
//Buyer1: bid: 20, quantity: 5, period: 3600 s
//Buyer2: bid: -30, quantity: 5, period: 3600 s
//Buyer3: bid: -40, quantity: 5, period: 3600 s
//Seller1: bid -50, quantity: 5, period: 3600 s
//Seller2: bid -35, quantity: 5, period: 3600 s
//Seller3: bid 30, quantity: 5, period: 3600 s

//Expected clearing price: -32.5
//Expected clearing quantity: 10

//Two buyers and two sellers will place
//negative bids

#set tmp=../test_markets_auction_negative_buyer_and_seller_price
#setenv GRIDLABD=../../../core

#define stylesheet=http://gridlab-d.svn.sourceforge.net/viewvc/gridlab-d/trunk/core/gridlabd-2_0

module market;
module tape;
module assert;

clock {
	timezone PST+8PDT;
	starttime '2001-01-01 00:00:00';
	stoptime '2001-01-03 00:00:00';
}

class auction {
    double current_price_mean_24h;
	double current_price_stdev_24h;
}

object auction {
	name Market_1;

	unit MWh;
	period 3600;
	verbose TRUE;
	special_mode NONE;
	warmup 0;
	init_price -32.5;
	init_stdev 1e-6;
	object multi_recorder {
		property current_market.clearing_price,current_market.clearing_quantity,current_price_mean_24h,current_price_stdev_24h,buyer1:price,buyer1:quantity,buyer2:price,buyer2:quantity,buyer3:price,buyer3:quantity,seller1:price,seller1:quantity,seller2:price,seller2:quantity,seller3:price,seller3:quantity;
		file "test_markets_auction_negative_buyer_and_seller_price_output.csv";
		interval 3600;
		limit 168;
	};
	object double_assert {
		in '2001-01-01 01:00:00';
		value -32.5;
		within 1e-5;
		target "current_market.clearing_price";
	};
	object double_assert {
		in '2001-01-01 01:00:00';
		value 10;
		within 1e-5;
		target "current_market.clearing_quantity";
	};
	
	object double_assert {
		value -32.5;
		within 1e-4;
		target "current_price_mean_24h";
	};
	object double_assert {
		value 0;
		within 1e-5;
		target "current_price_stdev_24h";
	};
	object enum_assert {
		in '2001-01-01 01:00:00';
		value 3;
		target "current_market.clearing_type";
	};
	object double_assert {
		value 0;
		target "current_market.marginal_quantity";
		within 1e-5;
	};
}

