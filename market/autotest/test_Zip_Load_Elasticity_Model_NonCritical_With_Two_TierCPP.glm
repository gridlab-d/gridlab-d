clock {
     timezone EST+5EDT;
     timestamp '2009-06-01 00:00:00';
     stoptime '2009-06-06 00:00:00';
}

#set profiler=1;
#set double_format=%+.12lg
#set randomseed=10;
#set relax_naming_rules=1;
#set minimum_timestep=30;
#include "../appliance_schedules.glm";

module market;
module tape;
module climate;
module assert;
module residential {
     implicit_enduses NONE;
};
module powerflow {
     solver_method FBS;
     NR_iteration_limit 100;
};

class player {
      double value;
}
object csv_reader {
     name CSVREADER;
     filename ../ColumbusWeather2009_Correct.csv;
}

object climate {
     name "Columbus OH";
     tmyfile ../ColumbusWeather2009_Correct.csv;
     reader CSVREADER;
};


object stubauction {
    name Market1;
    unit kW;
    period 3600;
	
    object player {
        property next.P;
		rank 8;
        file ../TOU_Pricing_2Tier_OnlyHigh.player;
        loop 1;
    };        
}

object node {
     bustype SWING;
     name ROOT;
     phases ABCN;
     nominal_voltage 7200;
}

object transformer_configuration {
      name substation_config;
      connect_type WYE_WYE;
      install_type PADMOUNT;
      primary_voltage 7200 V;
      secondary_voltage 7200 V;
      power_rating 4500;
      powerA_rating 1500;
      powerB_rating 1500;
      powerC_rating 1500;
      impedance 0.0015+0.00675j;
}

object transformer {
      phases ABCN;
      name Transformer1;
      from ROOT;
      to transformer_meter;
      configuration substation_config;
}

object meter {
     name transformer_meter;
     phases ABCN;
     nominal_voltage 7200;
     object recorder {
          property measured_real_power;
          limit 100000000;
          interval 300;
          file totalload.csv;
     };
     object recorder {
          property measured_real_power;
          limit 100000000;
          interval 60;
          file driver.csv;
     };
}

object house {
       name house1_house_A2;
       //Residential_4
       parent transformer_meter;
       schedule_skew 1246;
       Rroof 32.80;
       Rwall 16.60;
       Rfloor 16.78;
       Rdoors 5;
       Rwindows 1.50;
       airchange_per_hour 1.13;
       hvac_power_factor 0.97;
       cooling_system_type ELECTRIC;
       heating_system_type GAS;
       fan_type ONE_SPEED;
       hvac_breaker_rating 200;
       total_thermal_mass_per_floor_area 3.44;
       motor_efficiency AVERAGE;
       motor_model BASIC;
       cooling_COP 3.64;
       floor_area 1680;
       number_of_doors 2;
     
       object ZIPload {
              name zip1;
			  schedule_skew 1246;
              base_power LIGHTS*1.7385;
              power_fraction 0.000000;
              impedance_fraction 1.000000;
              current_fraction 0.000000;
              power_pf 0.000;
              current_pf 0.000;
              impedance_pf 1.000;
              heat_fraction 0.89;
			  			  
			  object passive_controller {
				  
				  period 300;
				  control_mode ELASTICITY_MODEL;				 
				  observation_object Market1;
				  observation_property next.P;
				  
				  state_property multiplier;	
				  
				  critical_day 0;
				  two_tier_cpp true;
				  
				  daily_elasticity -0.051;
				  sub_elasticity_first_second -0.152;
				  
				  second_tier_hours 12;
				  first_tier_hours 12;
				  
				  linearize_elasticity true;
				  first_tier_price 1.0;
				  second_tier_price 2.0;
				 
				  old_first_tier_price 1.5;	
								 
				object recorder {
				  property observation;
				  limit 100000000;
				  interval 300;
				  file results1.csv;
				};				  
			};
			
			 object recorder {
				  property multiplier;
				  limit 100000000;
				  interval 300;
				  file results.csv;
		    };		
			
			object double_assert{
				  target "multiplier";	
				  within 0.01;
				  object player{
					rank 4;				  
				  
					property value;
					file ../Elasticity_Multiplier_NonCritical_With_Two_TierCPP.player;
					
			};
			};
			
       };     
}