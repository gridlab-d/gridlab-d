// validates proper calculation of plugs.load property with a variable demand fraction;
// tape input file is generic_demand.glt;
// plugs.power_factor set to 1; based on the following equation:

// (complex, based on power factor) plugs.fraction*plugs.capacity

// payroll: d3y332


clock {
	timestamp '2000-01-01 0:00:00';
	stoptime '2000-02-01 0:00:00';
	timezone PST+8PDT;
	
}

module commercial;
module tape;
module assert;


object office {
	floor_area 4000 sf;
	floor_height 9 ft;
	exterior_ua 2.0;
	interior_ua 2.0;
	interior_mass 2000;
	heating_setpoint 70;
	cooling_setpoint 89;
	thermostat_deadband 4;
	plugs.capacity 1000;
	plugs.power_factor 1;
	object player {
		file ../generic_demand.glt;
		loop 1;
		property plugs.fraction;
	};
	object complex_assert {
		target "plugs.load";
		within .00001;
		object player {
			property value;
			file ../load_f.player;
			loop 1;
		};
	};
	object recorder {
		file "commercial_lights_usage.csv";
		interval 3600;
		limit 25;
		property plugs.fraction,plugs.load;
	};
}